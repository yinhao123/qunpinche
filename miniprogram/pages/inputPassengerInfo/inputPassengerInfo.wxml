<!--pages/inputPassengerInfo/inputPassengerInfo.wxml-->
<!-- 乘客填写信息 -->

<!-- 出发时间
人数
出发地点
到达地点 
预算
-->
<form>
  <view class="cu-form-group margin-top">
    <view class='title'>出发时间</view>
    <input placeholder="请填写出发时间" class='radius' name='input'></input>
  </view>
  <view class="cu-form-group">
    <view class='title'>同行人数</view>
    <input placeholder="请选择同行人数" class='radius' name='input'></input>
  </view>
  <view class="cu-form-group">
    <view class='title'>出发地点</view>
    <input placeholder="请填写你从哪出发" class='radius' name='input'></input>
  </view>
 <view class="cu-form-group">
    <view class='title'>到达地点</view>
    <input placeholder="请填写你要到哪去" class='radius' name='input'></input>
  </view>
   <view class="cu-form-group">
    <view class='title'>拼车预算</view>
    <input placeholder="请填写你的拼车预算" class='radius' name='input'></input>
  </view>
   <view class="cu-form-group">
    <view class='title'>携带行李</view>
    <input placeholder="请填写你携带的行李（可选）" class='radius' name='input'></input>
  </view>
     <view class="cu-form-group">
    <view class='title'>其他备注</view>
    <input placeholder="你有什么话要备注的" class='radius' name='input'></input>
  </view>
    <view class="cu-form-group margin-top">
    <view class='title'>让你的拼车让更多司机看到（除手机号）</view>
    <switch></switch>
  </view>
  <view class="padding flex flex-direction">

  <button class='cu-btn bg-orange lg' bindtap='submitInfo'>确认拼车</button>
  
</view>
</form>



